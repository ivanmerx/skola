        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Margin="45,74,55,10"/>
        <TextBlock x:Name="textBlock3" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Margin="46,72,54,12"/>
        <Button x:Name="button1" Content="Obrana" HorizontalAlignment="Left" Margin="36,51,0,0" Grid.Row="2" VerticalAlignment="Top" Width="85" Grid.Column="1"/>
    </Grid>
</Page>
