        <ProgressBar x:Name="ProgressBar" Height="22"  Maximum="100" Value="100" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Width="113" ValueChanged="ProgressBar_ValueChanged" Margin="18,45,19,0"/>
