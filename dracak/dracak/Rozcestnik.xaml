<Page x:Class="dracak.Rozcestnik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dracak"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="815"
      Title="Rozcestnik" Background="White">

    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="500" Width="815" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Příběh" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="250,0,0,0" Click="button_Click"/>
        <Button x:Name="button1" Content="Aréna" HorizontalAlignment="Right" Width="75" HorizontalContentAlignment="Center" Margin="0,0,250,0" Click="button1_Click"/>

    </Grid>
</Page>
