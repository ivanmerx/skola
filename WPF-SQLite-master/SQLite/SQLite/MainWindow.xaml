<Window x:Class="SQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="525">

    <StackPanel>
        <Label x:Name="ItemsCount"></Label>
        <ListView PreviewMouseDoubleClick="ToDoItemsListView_kliknuti" x:Name="ToDoItemsListView"></ListView>
        <Label x:Name="label" Content="Jméno"/>
        <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Text=""/>
        <Label x:Name="label1" Content="Příjmení"/>
        <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text=""/>
        <Button x:Name="button" Content="Vložit&#xD;&#xA;" Height="24" Click="button_Click"/>
    </StackPanel>
</Window>
