<Page x:Class="databaze_test_main.PisnickyInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:databaze_test_main"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="505" Background="White"
      Title="PisnickyInfo">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="536" Margin="0,24,0,0" VerticalAlignment="Top" Width="340">
            <Label HorizontalAlignment="Center">Název</Label>
            <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Margin="120,0,120,30"/>
            <Label HorizontalAlignment="Center">Interpret</Label>
            <TextBox x:Name="textBox2" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Margin="120,0,120,30"/>
            <Label HorizontalAlignment="Center">Délka skladby</Label>
            <TextBox x:Name="textBox3" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Margin="120,0,120,30"/>
            <Button x:Name="button" Content="Uložit skladbu" Click="button_Click"/>
        </StackPanel>

    </Grid>
</Page>
