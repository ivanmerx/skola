<Page x:Class="test4.ListViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test4"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525" Background="White"
      Title="ListViewPage">

    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" VerticalAlignment="Top" Width="232" SelectionChanged="ZmenaSelectu">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Název" DisplayMemberBinding="{Binding nazev}"/>
                    <GridViewColumn Width="100" Header="Cena" DisplayMemberBinding="{Binding cena}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
